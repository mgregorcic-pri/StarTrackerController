{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ceedling release"
        },
        {
            "label": "Build-Clean",
            "type": "shell",
            "command": "ceedling clobber release"
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "STM32_Programmer_CLI.exe --connect port=SWD UR LPM --write ${workspaceRoot}\\build\\release\\TTC.elf -V -HardRst"
        },
        {
            "label": "Build STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.build}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Clean STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.cleanBuild}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash STM",
            "type": "process",
            "command": "${command:stm32-for-vscode.flash}",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}